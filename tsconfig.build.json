{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "stripInternal": false,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/__tests__/**", "**/*.test.ts"]
}
