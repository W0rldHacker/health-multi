{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/health-multi/services.schema.json",
  "title": "health-multi services configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "interval": {
      "$ref": "#/definitions/duration"
    },
    "timeout": {
      "$ref": "#/definitions/duration"
    },
    "retries": {
      "$ref": "#/definitions/nonNegativeInteger"
    },
    "concurrency": {
      "$ref": "#/definitions/nonNegativeInteger"
    },
    "default_headers": {
      "type": "object",
      "description": "HTTP headers applied to every request with environment substitution",
      "additionalProperties": {
        "type": "string"
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/service"
      },
      "description": "List of services to poll. Service names must be unique"
    }
  },
  "required": ["services"],
  "definitions": {
    "duration": {
      "type": "string",
      "pattern": "^(?:[0-9]+(?:ms|s|m|h)|[0-9]+\\.[0-9]+s)$",
      "description": "Duration values like 500ms, 3s, 1m, 2h"
    },
    "nonNegativeInteger": {
      "type": "integer",
      "minimum": 0
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Unique identifier displayed in the TUI"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Absolute URL to the /health endpoint"
        },
        "expect_status": {
          "type": "string",
          "enum": ["ok", "degraded", "down"],
          "description": "Expected steady-state status"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true,
          "description": "Optional labels used for filtering"
        }
      },
      "required": ["name", "url"],
      "description": "Single service definition"
    }
  }
}
